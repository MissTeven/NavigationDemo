<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JSideBar">
        <attr name="menuTextsRes" format="reference" />
        <attr name="menuIconsRes" format="reference" />
        <attr name="menuPressedIconsRes" format="reference" />
        <attr name="titleRes" format="reference|string" />
        <attr name="backRes" format="reference" />
        <attr name="selectPosition" format="integer" />
    </declare-styleable>

    <declare-styleable name="JImageButton">
        <attr name="clickAlpha" format="float" />
        <attr name="isBgTransparent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="JButton">
        <attr name="clickTextAlpha" format="float" />
    </declare-styleable>
    <declare-styleable name="JRouteBar">
        <attr name="titleText" format="reference|string" />
        <attr name="description" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="JWheelRecyclerView">
        <attr name="visibleCount" format="integer" />
        <attr name="itemHeight" format="dimension" />
        <attr name="wheelWidthWeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="JWheelView">
        <!-- 中间分割线外的item数量,整个滑动数量就为 wheelItemCount * 2 + 1  -->
        <attr name="wheelItemCount" format="integer" />
        <!-- 滑轮item高度 -->
        <attr name="wheelItemHeight" format="dimension" />
        <!-- 滑轮字体大小 -->
        <attr name="wheelTextSize" format="dimension" />
        <!-- 滑轮字体颜色 -->
        <attr name="wheelTextColor" format="color" />
        <!-- 滑轮中心字体颜色 -->
        <attr name="wheelTextColorCenter" format="color" />
        <!-- 布局方向 -->
        <attr name="wheelOrientation">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="2" />
        </attr>
        <!-- 水平布局时不考虑只参数,  当垂直布局时的左右靠齐立体效果 -->
        <attr name="wheelGravity">
            <enum name="left" value="1" />
            <enum name="center" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="gravityCoefficient" format="float" />
    </declare-styleable>
    <declare-styleable name="JIndicator">
        <attr name="tabTitleRes" format="reference" />
        <attr name="selectedPosition" format="integer" />
        <attr name="spaceWidth" format="dimension" />
    </declare-styleable>
</resources>
